<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scancare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TransparentBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ShapeAppearance.Square.Fab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="textfont_primary" parent="">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textfont_secondary" parent="">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="EditTextHintFont" parent="textfont_secondary">
        <item name="android:fontWeight">150</item>
    </style>

    <style name="ButtonNoCaps" parent="@style/Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>